- const darkTheme = theme === 'true';

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //- link(rel="shortcut icon", href="/images/favicon.ico")
    title HeLog Account
    link(rel="stylesheet", href="/stylesheets/index.css")
    link(rel="stylesheet", href="/stylesheets/header.css")
    link(rel="stylesheet", href="/stylesheets/footer.css")

    block head

  body
    .app(class= darkTheme ? 'dark' : '')
      header.header
        a.logo(href=redirect_uri)
          h1 HeLog Account
        nav
          ul.list
            li.toggle-btn
              a(href=`?redirect_uri=${encodeURIComponent(redirect_uri)}&theme=${darkTheme ? 'false' : 'true'}`)
                .theme
                  span.icon(class= darkTheme ? 'moon' : 'sun')
                span= `${darkTheme  ? 'Dark' : 'Light'}`
      .container
        main
          block content
        footer.footer
          .container
            a.link(href="https://github.com/whitesgr03/helog-api")
              span.icon.github
            address
              a.link(href='mailto:whitesgr03@gmail.com')
                span.icon.email
                em.emphasis whitesgr03@gmail.com
          p= 'Â© 2024 Designed & coded by Weiss Bai'
